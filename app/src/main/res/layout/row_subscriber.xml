<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/layout_margin_row_card"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_marginLeft="@dimen/relative_layout_margin"
        android:layout_marginTop="@dimen/relative_layout_margin"
        android:layout_marginBottom="@dimen/relative_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar_subscriber"
            android:layout_width="@dimen/img_view_layout"
            android:layout_height="@dimen/img_view_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/img_view_margin"/>
        <TextView
            android:id="@+id/txt_login_subscriber"
            android:layout_toRightOf="@+id/img_avatar_subscriber"
            android:layout_marginTop="@dimen/txt_view_margin"
            android:textSize="@dimen/txt_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>